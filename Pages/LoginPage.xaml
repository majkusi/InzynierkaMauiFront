<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InzynierkaMauiFront.Pages.LoginPage"
             x:Name="LoginPageName"
             Shell.FlyoutBehavior="Disabled">
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout
                Padding="30,0"
                Spacing="25">
                <Image
                    Source="zut_logo.png"
                    HeightRequest="185"
                    Aspect="AspectFit"
                    SemanticProperties.Description="dot net bot in a race car number eight" />

                <Label
                    Text="Witaj w aplikacji do sprawdzania obecnosci !"
                    Style="{StaticResource Headline}"
                    SemanticProperties.HeadingLevel="Level1" />

                <Entry x:Name="loginEntry" Placeholder="Login"></Entry>
                <Entry x:Name ="passwordEntry" Placeholder="Haslo" IsPassword="True"></Entry>
                <Button x:Name="loginButton" Text="Zaloguj!" Clicked="LoginButton_Clicked"></Button>
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>